<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Livraria Mil Páginas</display-name>
    <description>Sistema de E-commerce para Livraria - Projeto Acadêmico</description>

    <!-- ===================================== -->
    <!-- CONFIGURAÇÕES DE ENCODING -->
    <!-- ===================================== -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- ===================================== -->
    <!-- FILTRO DE AUTENTICAÇÃO -->
    <!-- ===================================== -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.livraria.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <!-- ===================================== -->
    <!-- LISTENERS -->
    <!-- ===================================== -->
    <listener>
        <listener-class>com.livraria.listener.AppContextListener</listener-class>
    </listener>

    <!-- ===================================== -->
    <!-- SERVLETS PRINCIPAIS -->
    <!-- ===================================== -->
    
    <!-- Servlet de Livros -->
    <servlet>
        <servlet-name>LivroServlet</servlet-name>
        <servlet-class>com.livraria.servlet.LivroServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LivroServlet</servlet-name>
        <url-pattern>/livros</url-pattern>
    </servlet-mapping>

    <!-- Servlet de Autenticação -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.livraria.servlet.AuthServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <!-- Servlet do Carrinho -->
    <servlet>
        <servlet-name>CarrinhoServlet</servlet-name>
        <servlet-class>com.livraria.servlet.CarrinhoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarrinhoServlet</servlet-name>
        <url-pattern>/carrinho</url-pattern>
    </servlet-mapping>

    <!-- Servlet de Pedidos -->
    <servlet>
        <servlet-name>PedidoServlet</servlet-name>
        <servlet-class>com.livraria.servlet.PedidoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PedidoServlet</servlet-name>
        <url-pattern>/pedidos</url-pattern>
    </servlet-mapping>

    <!-- ===================================== -->
    <!-- CONFIGURAÇÕES DE SESSÃO -->
    <!-- ===================================== -->
    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Mude para true em produção com HTTPS -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- ===================================== -->
    <!-- PÁGINAS DE ERRO -->
    <!-- ===================================== -->
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/errors/500.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>403</error-code>
        <location>/errors/403.jsp</location>
    </error-page>

    <!-- ===================================== -->
    <!-- CONFIGURAÇÕES DE SEGURANÇA -->
    <!-- ===================================== -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <!-- Não usamos auth-constraint pois controlamos via filter -->
    </security-constraint>

    <!-- ===================================== -->
    <!-- PARÂMETROS DE CONTEXTO -->
    <!-- ===================================== -->
    <context-param>
        <param-name>app.name</param-name>
        <param-value>Livraria Mil Páginas</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.environment</param-name>
        <param-value>development</param-value>
    </context-param>

    <!-- ===================================== -->
    <!-- TIPOS MIME PERSONALIZADOS -->
    <!-- ===================================== -->
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>
    
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>application/font-woff2</mime-type>
    </mime-mapping>

    <!-- ===================================== -->
    <!-- ARQUIVO DE BOAS-VINDAS -->
    <!-- ===================================== -->
    <welcome-file-list>
        <welcome-file>livros</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- ===================================== -->
    <!-- CONFIGURAÇÕES DE RECURSOS ESTÁTICOS -->
    <!-- ===================================== -->
    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>false</param-value>
        </init-param>
        <!-- Cache para recursos estáticos (1 hora) -->
        <init-param>
            <param-name>cacheMaxSize</param-name>
            <param-value>102400</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Mapping para recursos estáticos -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpeg</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>

</web-app>